{
  "manifest_version": 3,
  "name": "SmartSnip - Smart AI Summarizer",
  "version": "1.0",
  "description": "Summarize web content and bookmarks instantly using Gemini AI.",
  
  "permissions": [
    "storage",
    "notifications",
    "contextMenus",
    "tabs",
    "scripting"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],

  "icons": {
    "16": "image16.png",
    "48": "image48.png",
    "128": "image128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "image16.png",
      "48": "image48.png",
      "128": "image128.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "options_page": "option.html",

 "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }
]


}
